# =============================================================================
# JeniferAI Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE (Required)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# AI PROVIDERS (Required for AI features)
# -----------------------------------------------------------------------------
# Anthropic (Claude) - https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxx

# -----------------------------------------------------------------------------
# GOOGLE INTEGRATION
# Get from: https://console.cloud.google.com/apis/credentials
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx
GOOGLE_REDIRECT_URI=http://localhost:3000/api/integrations/google/callback
GOOGLE_MAPS_API_KEY=xxx

# -----------------------------------------------------------------------------
# MICROSOFT INTEGRATION
# Get from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# -----------------------------------------------------------------------------
MICROSOFT_CLIENT_ID=xxx
MICROSOFT_CLIENT_SECRET=xxx
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/integrations/microsoft/callback

# -----------------------------------------------------------------------------
# SLACK INTEGRATION (Optional)
# Get from: https://api.slack.com/apps
# -----------------------------------------------------------------------------
SLACK_CLIENT_ID=xxx
SLACK_CLIENT_SECRET=xxx
SLACK_SIGNING_SECRET=xxx
SLACK_REDIRECT_URI=http://localhost:3000/api/integrations/slack/callback

# -----------------------------------------------------------------------------
# STRIPE (Required for billing)
# Get from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=JeniferAI
NODE_ENV=development
